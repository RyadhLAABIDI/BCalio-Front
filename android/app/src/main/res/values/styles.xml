<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash / launch -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Affiche l'image de démarrage jusqu'au premier frame Flutter -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Thème "normal" utilisé par Flutter après le démarrage -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- Thème transparent pour l'activité de réveil d'appel entrant -->
    <!-- (nécessite AppCompat, présent par défaut dans un projet Flutter) -->
    <style name="Theme.Transparent.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
